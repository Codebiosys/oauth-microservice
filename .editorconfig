# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = false

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[*.{js,py}]
charset = utf-8
indent_size = space
indent_size = 4

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2

[*.html]
indent_size = 2
indent_style = space

[*.css]
indent_size = 2
indent_style = space

[*.{yml,yaml}]
indent_size = 2
indent_style = space
